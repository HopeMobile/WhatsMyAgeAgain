<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="davidhope.whatsmyageagain.Controller.CelebritiesYourAge"
                style="?background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/celebrityUsersName"
        android:textSize="24sp"
        android:text="Matt"
        style="?text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:id="@+id/celebrityMessage"
        style="?text"
        android:textSize="24sp"
        android:paddingLeft="10dp"
        android:text="@string/celebrities_opening_message"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="30"
        android:textSize="18sp"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/celebrityMessage"
        android:layout_alignLeft="@+id/celebrityUsersName"
        android:layout_alignStart="@+id/celebrityUsersName"
        android:layout_marginLeft="128dp"
        android:layout_marginStart="128dp"/>


</RelativeLayout>
